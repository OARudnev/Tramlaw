{{> header }}

<div class="container">

<h1>{{title}}</h1>

{{#if errors}}
  {{#each errors}}
    <div class="alert alert-danger">
      {{this.msg}}
    </div>
  {{/each}}
{{/if}}

<form method="POST" action="/register">
  <div class="form-group">
    <label for="username">Username</label>
    <input type="text" name ="username" class="form-control" placeholder="Username">
  </div>
  <div class="form-group mt-2">
    <label for="email">Email</label>
    <input type="text" name ="email" class="form-control" placeholder="Email">
  </div>
  <div class="form-group mt-2 mb-2">
    <label for="password">Password</label>
    <input type="password" name ="password" class="form-control" placeholder="Password">
  </div>
  <div class="paswReq"><span class="lockImg" data-feather="lock" color="grey" width="20px"></span> Password must be between 8-100 characters long and include one lowercase character, one uppercase character, a number, and a special character.</div>
  <div class="form-group mt-2 mb-2">
    <label for="passwordMatch">Re-enter password</label>
    <input type="password" name ="passwordMatch" class="form-control" placeholder="Re-enter password">
  </div>
    <button type="submit" class="btn btn-primary">Sign up</button>
    </form>
  </div>

  <script>
    feather.replace()
  </script>

{{> footer-end }}